<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script>
function isPaid(){
 return localStorage.getItem("paid")==="yes";
}

function unlock(){
 localStorage.setItem("paid","yes");
 document.getElementById("msg").innerHTML="âœ… Premium unlocked (No Watermark)";
}

function resizeImage(){
 const f=document.getElementById("img").files[0];
 if(!f){alert("Image upload karo");return;}
 const r=new FileReader();
 r.onload=e=>{
  const i=new Image();
  i.onload=()=>{
   const c=document.createElement("canvas");
   c.width=600;c.height=600;
   const x=c.getContext("2d");
   x.drawImage(i,0,0,600,600);
   if(!isPaid()){
    x.fillStyle="rgba(255,255,255,0.6)";
    x.font="20px Arial";
    x.fillText("Generated by Sunil Kumar",20,580);
   }
   const a=document.createElement("a");
   a.href=c.toDataURL();
   a.download="resized.png";
   a.click();
  };
  i.src=e.target.result;
 };
 r.readAsDataURL(f);
}

function imgToPdf(){
 const f=document.getElementById("imgpdf").files[0];
 if(!f){alert("Image upload karo");return;}
 const r=new FileReader();
 r.onload=e=>{
  const {jsPDF}=window.jspdf;
  const pdf=new jsPDF();
  pdf.addImage(e.target.result,"JPEG",10,10,180,160);
  if(!isPaid()){
   pdf.text("Generated by Sunil Kumar",10,290);
  }
  pdf.save("image.pdf");
 };
 r.readAsDataURL(f);
}
</script>

